<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <EditText
        android:id="@+id/inputStepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_step_hint"
        android:minLines="2"
        android:gravity="top" />

    <EditText
        android:id="@+id/inputStepImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/create_step_image_hint" />

    <Button
        android:id="@+id/buttonRemoveStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/create_remove" />
</LinearLayout>
