<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp">

    <EditText
        android:id="@+id/inputStepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_step_hint"
        android:minLines="2"
        android:gravity="top" />

    <EditText
        android:id="@+id/inputStepImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/create_step_image_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPickStepImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_cover_pick" />

        <Space
            android:layout_width="@dimen/create_horizontal_space"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonCaptureStepImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_cover_capture" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRemoveStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/create_remove" />
</LinearLayout>
